generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  incomeSources IncomeSource[]
  expenses      Expense[]
  targets       Target[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model IncomeSource {
  id               String   @id @default(uuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  
  item             String
  category         String   @default("Other")
  sortOrder        Int      @default(0)
  type             String
  nature           String
  payoutFrequency  String?
  riskFactor       Int
  growthRate       Float
  weeklyHours      Float
  amountInvested   Float
  investedUntil    DateTime?
  monthlyIncome    Float
  inHand           Boolean  @default(true)
  
  // Advanced Fields
  tdsDeducted      Boolean  @default(false)
  tdsRate          Float    @default(0) // Percentage, e.g. 10.0
  maturityAmount   Float?   // For FDs/Bonds
  nextPayoutDate   DateTime?
  
  investmentDate   DateTime? // Start date of investment
  recurringDay     Int?      // Day of month (1-31) for SIP/Salary
  
  payouts          PayoutSchedule[]
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model PayoutSchedule {
  id              String       @id @default(uuid())
  incomeSourceId  String
  incomeSource    IncomeSource @relation(fields: [incomeSourceId], references: [id], onDelete: Cascade)
  
  date            DateTime
  amount          Float
  type            String       // Principal, Interest, Salary, Bonus, Dividend
  status          String       @default("Scheduled") // Scheduled, Paid, Overdue
  
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model Expense {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  title       String
  amount      Float
  category    String   // Needs, Wants, Savings, or specific tags
  date        DateTime @default(now())
  description String?
  paymentMethod String? // GPay, CC, Cash
  
  // Recurring & Commitments
  isRecurring Boolean  @default(false)
  frequency   String?  // Monthly, Quarterly, Yearly
  recurringDay Int?     // 1-31
  
  // Loan Specifics
  isLoan      Boolean  @default(false)
  totalPrincipal Float?
  remainingPrincipal Float?
  interestRate Float?
  tenureMonths Int?
  
  // Investment Commitments (SIPs)
  isSIP       Boolean  @default(false)
  assetType   String?  // Stocks, Mutual Funds, etc.
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Target {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  name        String
  targetAmount Float
  currentAmount Float
  deadline    DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
